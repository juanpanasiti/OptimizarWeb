<h2>Inicia sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "E-mail" %><br />
    <%= f.email_field :email, autofocus: true, class:'form-control2 form-control', placeholder:"Escribe tumail@correo.com" %>
  </div>

  <div class="field">
    <%= f.label :password, "Contraseña" %><br />
    <%= f.password_field :password, autocomplete: "off", class:'form-control2 form-control', placeholder:"Y acá tu **********" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recuerdame" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Logueame!", class:'btn btn-success  ' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
