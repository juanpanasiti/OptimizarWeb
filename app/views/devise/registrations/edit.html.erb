<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Esperando confirmacion de: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Nueva contraseña" %> <i>(deja esto en blanco si no quieres cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "off", class:'form-control2', placeholder:"Escribe una ********** que no vayas a olvidar" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confierma tu nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control2', placeholder:"De nuevo la misma ********** para confirmarla" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(necesitamos tu contraseña actual para confirmar)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class:'form-control2', placeholder:"Escribe tu ********** actual para confirmar los cambios" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>No estas feliz? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "De verdad? no se puede deshacer!" }, method: :delete, class:"btn btn-danger" %></p>

<%= link_to "Volver", :back, class:'btn btn-warning' %>
