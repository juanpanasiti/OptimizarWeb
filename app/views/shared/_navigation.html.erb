<div id="wrapper">

  <!-- Sidebar -->
  <div id="sidebar-wrapper" class="be-black white ajustar">
    <ul class="sidebar-nav">
      <li class="sidebar-brand"><%= link_to "Inicio", root_path %></li>
      <li class="fcol-md"> <%= link_to "Artículos", articles_path %> </li>
      <% @categories.each do |category| %>
        <li class="fcol-md"> <%= link_to category.name, category %> </li>
      <% end %>
			<li class="fcol-md"> <%= link_to "Nosotros", welcome_about_path %></li>
			<% if user_signed_in? %>
        <li class="fcol-md"> <%= link_to "Categorias", categories_path %> </li>
				<li class="fcol-md"> <%= link_to "Contacto", welcome_contact_path %> </li>
        <li><%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete %></li>
			<% else %>
        <li><%= link_to "Logeate", new_user_session_path %></li>
				<li><%= link_to "Registrate", new_user_registration_path %></li>
			<% end %>
    </ul>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">
  	
      <div class="container-fluid">
          <div class="row">
              <div class="col-lg-12">
                  
								<%= yield %>
              </div>
          </div>
      </div>
  </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->


<!-- Menu Toggle Script -->
<script>
$("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
});
</script>